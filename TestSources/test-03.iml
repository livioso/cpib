program main
global
    var position: record ( var x:int64, const y:int64 ) ;
    professor: record ( id:int64, level:int64 ) ;

    offsetInY:int64;

    fun manhattenDistance (
      ref const q: record ( x:int64, y:int64 ) ,
      copy const x:int64,
      copy const y:int64
    ) returns const d:int64
    do
      d init := x * q.x
    endfun

do
    position.x init := 4;
    position.y init := 5;

    professor.id init := 1007;
    professor.level init := 19;

    position.x := 42;

    offsetInY init := manhattenDistance ( position, 5, 4 ) ;
    position.x := position.y + offsetInY

endprogram