program main
global
    var position: record ( var x:int32, const y:int32 ) ;
    professor: record ( id:int32, level:int32 ) ;

    offsetInY:int32;

    proc manhattenDistance (
      ref const q: record ( x:int32, y:int32 ) ,
      copy const x:int32,
      copy const y:int32
    )
    do
      q.x := x * y + q.x * q.y
    endproc

do
    position.x init := 4;
    position.y init := 5;

    professor.id init := 1007;
    professor.level init := 19;

    position.x := 42;

    call manhattenDistance ( position, 5, 4 ) ;
    debugout position.x;
    debugout position.y

endprogram
